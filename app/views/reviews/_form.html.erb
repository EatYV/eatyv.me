<div class="small-6 small-centered columns">
  <% if user_signed_in? and current_user != @recipe.user %>
    <%= form_for([@recipe, @recipe.reviews.build]) do |f| %>
  
      <div class="field">
        <%= f.text_area :comment, placeholder: :comment %>
      </div>
      <div class="field small-4 small-centered columns">
        <%= f.select :grade, [5, 4, 3, 2, 1] %>
      </div>
      <div class="actions">
        <%= f.submit 'Add Review', class: 'button warning' %>
      </div>
    <% end %>
  <% end %>
</div>