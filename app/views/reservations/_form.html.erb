<% if user_signed_in? and current_user != @recipe.user %>
  <div class="small-6 small-centered columns">
    <%= form_for([@recipe, @recipe.reservations.build]) do |f| %>
      <div class="field">
        <%= f.text_field :first_name, placeholder: :first_name %>
      </div>
      <br>
      <div class="field">
        <%= f.text_field :last_name, placeholder: :last_name %>
      </div>
      <br>
      <div class="field">
        <%= f.number_field :persons, placeholder: :persons %>
      </div>
      <br>
      <div class="field">
        <%= f.text_field :time, placeholder: :time %>
      </div>
      <br>
      <div class="field">
        <%= f.text_area :message, placeholder: :message, size: '30x6' %>
      </div>
      <br>
      <%= f.submit class: 'button warning'%>
      <br>
      <br>
    <% end %>
  </div>
<% end %>
